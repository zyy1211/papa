page {
    background: #fff;
}

.content {
    text-align: center;
    font-size: 24rpx;
}

.user-logo-box {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    margin: 80rpx auto 0;
    border-radius: 50%;
    overflow: hidden;
}

.user-logo {
    width: 100%;
    height: 100%;
}

.user-logo-memo {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    background: rgba(0,0,0,0.3);
    color: #fff;
    font-size: 22rpx;
}

.user-nick-name {
    width: 630rpx;
    height: 70rpx;
    margin: 70rpx auto 0;
    border-bottom: 2rpx solid #eaeaea;
    font-size: 34rpx;
    line-height: 70rpx;
}

.user-sex-box {
    width: 354rpx;
    margin: 50rpx auto 80rpx;
}

.user-sex-header {
    margin-top: 20rpx;
    font-size: 34rpx;
}

.user-sex-memo {
    margin-top: 20rpx;
    color: #F06969;
}

.icon-sex {
    width: 32rpx;
    height: 30rpx;
    vertical-align: text-top;
}

.user-sex-item-box {
    float: left;
    width: 50%;
}

.user-sex-item {
    width: 125rpx;
    height: 125rpx;
    margin: 50rpx auto 0;
    border: 2rpx solid #EFEFEF;
    border-radius: 50%;
    line-height: 125rpx;
    font-size: 36rpx;
}

.user-sex-item.active {
    border-color: #636A81;
    background: #636A81;
    color: #fff;
}

.icon-address {
    width: 44rpx;
    height: 58rpx;
}

.user-address-name {
    display: block;
    width: 300rpx;
    height: 76rpx;
    margin: 20rpx auto 0;
    border: 2rpx solid #EFEFEF;
    border-radius: 13rpx;
    line-height: 76rpx;
    font-size: 30rpx;
}

.footer-button {
    display: block;
    width: 400rpx;
    height: 80rpx;
    margin: 100rpx auto 0;
    background: #00CD91;
    color: #fff;
    border-radius: 60rpx;
    line-height: 80rpx;
}