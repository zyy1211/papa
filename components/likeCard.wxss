@import "authorize.wxss";

.user-like {
    float: right;
    display: inline-block;
    max-width: 130rpx;
    height: 50rpx;
    margin-left: 10rpx;
    font-size: 30rpx;
    color: #666;
    text-align: right;
    line-height: 50rpx;
}

.icon-like-box {
    float: left;
    padding-top: 5rpx;
}

.like-text {
    float: left;
}

.icon-like {
    width: 40rpx;
    height: 32rpx;
    margin-right: 3rpx;
}

.is-like {
    animation: scaleDraw .3s ease-in-out;
}

@-webkit-keyframes scaleDraw {
    0% {
        transform: scale(1) rotate(0);
    }

    25% {
        transform: scale(1.3) rotate(-45deg);
    }

    50% {
        transform: scale(1.5) rotate(0);
    }

    75% {
        transform: scale(1.3) rotate(45deg);
    }

    100% {
        transform: scale(1) rotate(0);
    }
}

@keyframes scaleDraw {
    0% {
        transform: scale(1) rotate(0);
    }

    25% {
        transform: scale(1.3) rotate(-45deg);
    }

    50% {
        transform: scale(1.5) rotate(0);
    }

    75% {
        transform: scale(1.3) rotate(45deg);
    }

    100% {
        transform: scale(1) rotate(0);
    }
}