.team-con {
    width: 100%;
    border-bottom: 30rpx solid #f3f3f3;
    background: #fff;
    color: #333;
}

.team-header {
    width: 100%;
    height: 67rpx;
    line-height: 67rpx;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #f3f3f3;
    font-size: 32rpx;
    font-weight: bold;
}

.team-index {
    width: 71rpx;
    height: 100%;
    flex-shrink: 0;
    flex-grow: 0;
    text-align: right;
    position: relative;
}

.team-index::before {
    content: '';
    width: 13rpx;
    height: 10rpx;
    background: #37D79D;
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -5rpx;
}

.team-name {
    flex-shrink: 0;
    flex-grow: 0;
    height: 100%;
    margin-left: 19rpx;
}

.team-main {
    width: 100%;
    padding: 0 19rpx;
    font-size: 26rpx;
    box-sizing: border-box;
    padding-top: 32rpx;
}

.info-con {
    width: 100%;
    display: flex;
}

.info-title {
    flex-grow: 0;
    flex-shrink: 0;
    color: #999;
}

.member-con {
    flex-grow: 1;
    display: flex;
    flex-wrap: wrap;
    padding-left: 19rpx;
}

.member-con.no-more {
    max-height: 128rpx;
    overflow: hidden;
}

.member-name {
    width: 18%;
    height: 32rpx;
    margin-left: 2%;
    margin-bottom: 32rpx;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    box-sizing: border-box;
}

.see-more-btn {
    width: 100%;
    height: 60rpx;
    padding-bottom: 30rpx;
    color: #B7C1C1;
    font-size: 22rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon {
    position: relative;
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    margin-right: 15rpx;
}

.icon-more {
    width: 10rpx;
    height: 10rpx;
    border-left: 1rpx solid #AAA;
    border-bottom: 1rpx solid #AAA;
    transform: rotate(-45deg);
    margin-left: 10rpx;
}

.icon-collapse {
    width: 10rpx;
    height: 10rpx;
    border-left: 1rpx solid #AAA;
    border-bottom: 1rpx solid #AAA;
    transform: rotate(135deg);
    margin-left: 10rpx;
}

.personal-con {
    box-sizing: border-box;
    width: 100%;
    background: #fff;
    color: #333;
    font-size: 32rpx;
    padding: 0 26rpx;
}

.personal-item {
    width: 100%;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #f3f3f3;
}

.personal-index {
    width: 50rpx;
    flex-shrink: 0;
}

.personal-name {
    flex-grow: 1;
    flex-shrink: 0;
    font-size: 30rpx;
}

.name-con {
    width: 100%;
    line-height: 95rpx;
}