.toggle-con {
    width: 100%;
}

.project-con {
    position: relative;
    width: 100%;
    background: transparent;
    z-index: 100;
}

.selectd-con {
    width: 100%;
    height: 90rpx;
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 2rpx solid #f3f3f3;
    background: #fff;
}

.project-toggle-list {
    position: absolute;
    width: 100%;
    border-bottom: 40rpx solid #f3f3f3;
    transition: all .4s;
}

.project-toggle-list.toggle {
    border-bottom: 40rpx solid transparent;
    transition: all .4s;
}

.project-list {
    box-sizing: border-box;
    width: 100%;
    background: #fff;
    max-height: 0;
    overflow-y: hidden;
    transition: all .4s;
}

.project-list.toggle {
    max-height: 480rpx;
    overflow-y: scroll;
    padding-bottom: 20rpx;
    background: #fff;
    transition: all .4s;
}

.project-item {
    width: 100%;
    height: 90rpx;
    font-size: 28rpx;
    color: #333;
    text-align: center;
    line-height: 90rpx;
}

.toggle-btn-con {
    position: absolute;
    bottom: -21rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.toggle-btn {
    height: 42rpx;
    line-height: 42rpx;
    background: #fff;
    color: #FFA918;
    font-size: 22rpx;
    border: 2rpx solid #F3E1C2;
    border-radius: 5rpx;
    padding: 0 22rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.icon-toggle {
    margin-left: 10rpx;
    width: 10rpx;
    height: 10rpx;
    border: 2rpx solid #FFA918;
    transform: rotate(45deg) translateY(-4rpx);
    border-top: transparent;
    border-left: transparent;
}

.icon-toggle.toggle {
    margin-left: 20rpx;
    transform: rotate(-135deg) translateY(-4rpx);
}

.border-placeholder {
    width: 100%;
    height: 40rpx;
}

.toggle-mask {
    position: fixed;
    width: 100%;
    top: 94rpx;
    bottom: 0;
    background: rgba(0,0,0,.5);
    z-index: 99;
}