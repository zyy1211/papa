.form-special-race {
    position: relative;
    display: block;
}

.form-special-race button {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    background: none;
}

.form-special-race button::after {
    border: none;
}

.race-type {
    position: absolute;
    right: 28rpx;
    top: 22rpx;
    height: 36rpx;
    padding: 0 10rpx;
    background: #00CD91;
    border-radius: 10rpx;
    font-size: 22rpx;
    color: #fff;
    line-height: 36rpx;
}

.special-race-header {
    position: relative;
    width: 100%;
    height: 275rpx;
}

.special-race-img {
    width: 100%;
    height: 100%;
}

.end-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(360deg,rgba(55,64,73,.5) 0%,rgba(43,46,49,.5) 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.icon-race-end {
    display: block;
    width: 76rpx;
    height: 71rpx;
    flex-shrink: 0;
    margin-bottom: 19rpx;
}

.race-end-img {
    width: 100%;
    height: 100%;
}

.end-text {
    line-height: 56rpx;
    color: #fff;
    font-size: 40rpx;
}

.special-race-info {
    position: relative;
    color: #55666D;
    font-size: 24rpx;
    padding: 17rpx 27rpx 28rpx;
}

.race-title {
    width: 100%;
    height: 42rpx;
    line-height: 42rpx;
    color: #333;
    font-size: 30rpx;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info-item {
    margin-top: 18rpx;
    display: flex;
    align-items: center;
}

.icon {
    display: inline-block;
    width: 25rpx;
    height: 25rpx;
    margin-right: 15rpx;
}

.signing-tip {
    position: absolute;
    bottom: 28rpx;
    right: 14rpx;
    width: 82rpx;
    height: 28rpx;
}

.icon-img {
    width: 100%;
    height: 100%;
}