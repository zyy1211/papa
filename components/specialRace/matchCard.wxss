.match-card {
    box-sizing: border-box;
    position: relative;
    width: 100%;
    border-bottom: 30rpx solid #f3f3f3;
    border-left: 25rpx solid #f3f3f3;
    border-right: 25rpx solid #f3f3f3;
}

.match-header {
    box-sizing: border-box;
    width: 100%;
    height: 56rpx;
    border-radius: 10rpx 10rpx 0 0;
    background: #fff;
    font-size: 22rpx;
    color: #ABABAB;
    padding: 0 28rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 2rpx solid #f3f3f3;
}

.match-site {
    color: #7A7979;
    font-weight: bold;
    display: flex;
    align-items: center;
}

.match-site::before {
    width: 8rpx;
    height: 8rpx;
    content: '';
    border-radius: 50%;
    background: linear-gradient(90deg,rgba(166,229,119,1),rgba(55,215,157,1));
    margin-right: 14rpx;
}

.team-info {
    box-sizing: border-box;
    position: relative;
    width: 100%;
    height: 145rpx;
    background: #fff;
    border-radius: 0 0 10rpx 10rpx;
    padding: 0 55rpx;
    font-size: 24rpx;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.team-info.match-empty-site {
    border-radius: 10rpx;
}

.team-index {
    position: absolute;
    left: -15rpx;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    background: #D9E0E8;
    border-radius: 50%;
    color: #fff;
    font-size: 28rpx;
    font-weight: bold;
}

.team-name {
    width: 200rpx;
    height: 78rpx;
    flex-shrink: 0;
    word-break: break-all;
    font-weight: bold;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    text-align: right;
}

.right-name {
    justify-content: flex-start;
    text-align: left;
}

.team-name.no-out-line {
    justify-content: center;
    background: #F3F3F3;
    color: #00CD91;
    border-radius: 10rpx;
}

.match-status {
    flex-grow: 1;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.vs-status {
    font-size: 32rpx;
    color: #9D9B9A;
    font-weight: bold;
    letter-spacing: 3rpx;
}

.start-status {
    box-sizing: border-box;
    width: 70rpx;
    height: 32rpx;
    border: 2rpx solid #FBE8C9;
    border-radius: 7rpx;
    color: #FFA918;
    font-size: 20rpx;
    text-align: center;
    line-height: 32rpx;
}

.end-status {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #F06969;
    font-size: 32rpx;
    font-weight: bold;
}

.warn-status {
    box-sizing: border-box;
    width: 22rpx;
    height: 22rpx;
    border-radius: 50%;
    border: 2rpx solid #F06969;
    font-size: 15rpx;
    margin-left: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.member-con {
    box-sizing: border-box;
    width: 100%;
    padding: 0 55rpx;
    background: #fff;
    border-radius: 10rpx;
    border-top: 2rpx solid #f3f3f3;
}

.member-item {
    width: 100%;
    padding: 36rpx 0;
    border-bottom: 2rpx solid #F2F2F2;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.member-info-con {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.end-race-score {
    margin-top: 26rpx;
    padding: 0 72rpx;
    width: auto;
    height: 40rpx;
    background: #F3F3F3;
    color: #BEBEBE;
    font-size: 24rpx;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.end-race-score view {
    margin-right: 30rpx;
}

.end-race-score view:last-child {
    margin-right: 0;
}

.member-item:last-child {
    border-bottom: 0;
}

.member-item .end-text {
    color: #72D565;
}

.member-name {
    width: 200rpx;
    height: 100%;
    font-size: 24rpx;
    font-weight: normal;
    color: #666;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.name-con {
    width: 100%;
    height: 32rpx;
    line-height: 32rpx;
    word-break: normal;
    text-align: right;
    overflow: hidden;
    margin-bottom: 36rpx;
}

.right-name .name-con {
    text-align: left;
}

.name-con:last-child {
    margin-bottom: 0;
}

.show-btn {
    position: absolute;
    bottom: -18rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 107rpx;
    height: 37rpx;
    background: #B5E1D4;
    border-radius: 18rpx;
    font-size: 20rpx;
    color: #fff;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    letter-spacing: 3rpx;
}

.show-btn::after {
    content: '';
    width: 10rpx;
    height: 10rpx;
    border-bottom: 2rpx solid #fff;
    border-right: 2rpx solid #fff;
    transform: rotate(45deg);
    margin-left: 12rpx;
}

.show-btn.active::after {
    transform: rotate(-135deg);
    margin-top: 3rpx;
}

.abstain-modal {
    position: fixed;
    top: 0;
    bottom: 0;
    width: 100%;
    z-index: 100;
}

.mask {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
}

.info-con {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    margin: auto;
    margin-top: -50%;
    width: 575rpx;
}

.modal-title {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 10rpx 10rpx 0 0;
    font-size: 26rpx;
    background: #fff;
}

.modal-con {
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 25rpx;
    background: #fff;
}

.abstain-info {
    width: 100%;
    font-size: 26rpx;
    color: #ABABAB;
    text-align: center;
    margin-bottom: 5rpx;
}

.modal-footer {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 2rpx solid #EAEAEA;
    background: #fff;
    border-radius: 0 0 10rpx 10rpx;
}

.modal-footer button {
    width: 100%;
    height: 100%;
    background: transparent;
    border-radius: 0;
    font-size: 30rpx;
    color: #A7A7A7;
}

.modal-footer button::after {
    border: none;
}

.modal-footer .confirm {
    color: #37D79D;
}