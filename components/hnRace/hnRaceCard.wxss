.form-special-race {
    position: relative;
    display: block;
}

.form-special-race .form-btn {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    background: none;
}

.form-special-race .form-btn::after {
    border: none;
}

.special-race-header {
    position: relative;
    width: 100%;
    height: 266rpx;
    border-radius: 20rpx 20rpx 0 0;
    overflow: hidden;
}

.special-race-img {
    width: 100%;
    height: 100%;
    border-radius: 20rpx 20rpx 0 0;
}

.end-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(360deg,rgba(55,64,73,.5) 0%,rgba(43,46,49,.5) 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.icon-race-end {
    display: block;
    width: 76rpx;
    height: 71rpx;
    flex-shrink: 0;
    margin-bottom: 19rpx;
}

.race-end-img {
    width: 100%;
    height: 100%;
}

.end-text {
    line-height: 56rpx;
    color: #fff;
    font-size: 40rpx;
}

.special-race-info {
    box-sizing: border-box;
    position: relative;
    color: #333;
    font-size: 26rpx;
    padding: 17rpx 27rpx 28rpx;
}

.race-title {
    width: 100%;
    line-height: 47rpx;
    font-size: 30rpx;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.info-item {
    margin-top: 18rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 100%;
}

.icon {
    display: inline-block;
    width: 25rpx;
    height: 25rpx;
    margin-right: 15rpx;
}

.icon-img {
    width: 100%;
    height: 100%;
}