.opcitat {
    opacity: 0;
    transition: all .7s;
}

.header-mask {
    height: 44px;
}

.toogle-con {
    position: sticky;
    top: 94rpx;
    z-index: 990;
}

.race-header {
    background: #fff;
    text-align: center;
    margin-bottom: 10px;
    font-size: 14px;
    font-weight: 400;
    position: sticky;
    top: 94rpx;
    width: 100%;
    z-index: 99;
}

.race-title {
    padding: 6px 0;
}

.button-area {
    position: absolute;
    width: 100%;
    height: 0;
    text-align: center;
}

.toggle-button {
    font-size: 13px;
    color: #FFA918;
    border: 1px #F3E1C2 solid;
    background: #fff;
    padding: 1px 10px;
    display: inline-block;
}

.toggle-project {
    width: 100%;
    position: absolute;
    height: 20px;
    z-index: 99;
}

.project-list {
    background: #fff;
    overflow-y: auto;
}

.project-list-border {
    border-top: 1px solid #F5F5F5;
}

.project-item {
    font-size: 14px;
    padding: 12px 0;
}

.toggle-mask {
    position: fixed;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,.6);
    top: 0;
    z-index: 9;
    transition: all .4s;
}

.devide {
    height: 24rpx;
    background: #f3f3f3;
}

.blank {
    background: #fff;
    height: 35rpx;
}

.arrow-top {
    width: 18rpx;
    height: 10rpx;
    margin-bottom: 6rpx;
    margin-left: 6rpx;
    transition: all .4s;
}

.arrow-transition {
    transition: all .4s;
    transform: rotate(180deg);
}